# Server Configuration
PORT=3001
NODE_ENV=development

# Supabase Configuration
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# API Configuration
API_VERSION=v1
API_BASE_PATH=/api

# Rate Limiting
RATE_LIMIT_WINDOW=15 # minutes
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=logs/app.log

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# AWS KMS Configuration for Email Encryption
# Note: AWS credentials (ACCESS_KEY_ID, SECRET_ACCESS_KEY) are not needed when running on EC2 with an IAM role.
# The IAM role attached to your EC2 instance should have permissions to use the KMS key.
AWS_REGION=us-east-1

# The unique identifier for your master key in AWS KMS
PII_ENCRYPTION_KEY_ID=your-kms-key-id-or-arn

# This will be generated on first startup. Copy the value from the console logs and paste it here.
ENCRYPTED_DATA_KEY=